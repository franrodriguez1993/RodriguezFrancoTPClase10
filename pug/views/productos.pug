extends layout 
block productos
    div(class="container-sm text-center")
      h3(class="mt-4")="Lista de productos"
      table(class="table my-5")
          
          if productos.length != 0
                thead
                  tr(class="table-primary")
                    th(scope="col")="Nombre"
                    th(scope="col")="Precio"
                    th(scope="col")="Imagen"


                tbody
                each producto in productos
                  tr
                    td=producto.title
                    td=producto.price 
                    td
                      img(src=producto.thumbnail style="width:50px")
